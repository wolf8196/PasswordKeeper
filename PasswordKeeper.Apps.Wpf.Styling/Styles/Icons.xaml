<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:iconPack="http://metro.mahapps.com/winfx/xaml/iconpacks">

    <Style x:Key="MaterialIconsLarge" TargetType="iconPack:PackIconMaterial">
        <Setter Property="Height" Value="30" />
        <Setter Property="Width" Value="30" />
    </Style>

    <Style x:Key="MaterialIconsSmall" TargetType="iconPack:PackIconMaterial">
        <Setter Property="Height" Value="20" />
        <Setter Property="Width" Value="20" />
    </Style>

    <Style x:Key="ModernIconsLarge" TargetType="iconPack:PackIconModern">
        <Setter Property="Height" Value="30" />
        <Setter Property="Width" Value="30" />
    </Style>

    <Style x:Key="ModernIconsSmall" TargetType="iconPack:PackIconModern">
        <Setter Property="Height" Value="20" />
        <Setter Property="Width" Value="20" />
    </Style>
</ResourceDictionary>