    <OutputType>WinExe</OutputType>
    <StartupObject>PasswordKeeper.Apps.Wpf.Program</StartupObject>
    <Version>1.1.0</Version>
    <ApplicationVersion>1.1.0</ApplicationVersion>
    <AssemblyVersion>1.1.0</AssemblyVersion>
