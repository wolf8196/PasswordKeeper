    <ProjectReference Include="..\PasswordKeeper.Services\PasswordKeeper.Services.csproj" />
    <ProjectReference Include="..\PasswordKeeper.Utils\PasswordKeeper.Utils.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="password.keeper.ico" />
  </ItemGroup>

</Project>
